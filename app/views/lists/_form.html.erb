<div class='control-group error'>
  <label class='control-label'><%= flash[:error].try(:join, ', ') %></label>
</div>

<%= form_for @list do |form| %>
  <div>
    <%= form.label :name %><br />
    <%= form.text_field :name %><br />
  </div>

  <div>
    <%= form.label :reason %><br />
    <%= form.text_field :reason %><br />
  </div>

  <p><%= form.submit %></p>
<% end %>
